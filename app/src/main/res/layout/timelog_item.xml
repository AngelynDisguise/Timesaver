<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/timelog_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingVertical="12dp"
            android:paddingStart="15dp"
            android:text="Date"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timelog_start_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:text="Start Time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/timelog_end_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:text="End Time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/timelog_total_time_text_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:text="Duration"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/timelog_options_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:contentDescription="more options icon"
            android:src="@drawable/more_options_horizontal"
            app:tint="?android:attr/textColorPrimary"/>
    </LinearLayout>

    <View
        android:id="@+id/timelog_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/textColorPrimary"/>

</LinearLayout>