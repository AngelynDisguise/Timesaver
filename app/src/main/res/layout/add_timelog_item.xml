<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/timelog_add_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:gravity="center">

        <EditText
            android:id="@+id/timelog_add_date_edit_text_view"
            android:importantForAutofill="no"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="2dp"
            android:hint="mm:dd:yyyy"
            android:inputType="date"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/timelog_add_start_time_edit_text_view"
            android:importantForAutofill="no"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="2dp"
            android:hint="HH:MM:SS"
            android:inputType="time"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/timelog_add_end_time_edit_text_view"
            android:importantForAutofill="no"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="2dp"
            android:hint="HH:MM:SS"
            android:inputType="time"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timelog_add_total_time_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="Total Time"
            android:textSize="11sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/timelog_delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="cancel icon"
                android:src="@drawable/delete_icon"/>

            <ImageView
                android:id="@+id/timelog_confirm_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="confirm icon"
                android:src="@drawable/confirm_icon"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/timelog_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/textColorPrimary"/>

</LinearLayout>